// Prisma schema for Kappa Kappa Psi Learning App

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("BOH_DATABASE_URL")
}

// ========== USER & AUTH (NextAuth.js v5) ==========
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  // Custom fields for KKPsi app
  displayName       String?
  customAvatar      String?   // Custom avatar URL or emoji/icon identifier
  showOnLeaderboard Boolean @default(true)
  dailyCardGoal     Int      @default(10)
  dailyQuizGoal     Int      @default(1)

  accounts      Account[]
  sessions      Session[]

  // Learning progress
  flashcardProgress FlashcardProgress[]
  quizAttempts      QuizAttempt[]
  dailyStreak       DailyStreak?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ========== FLASHCARD PROGRESS ==========
model FlashcardProgress {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // References the question ID from trivia JSON
  questionId  String
  topic       String   // "chapters", "founding_fathers", "awards_and_jewelry", etc.

  // Spaced repetition fields (SM-2 algorithm)
  status      FlashcardStatus @default(NOT_STARTED)
  easeFactor  Float           @default(2.5)
  interval    Int             @default(0)  // days until next review
  repetitions Int             @default(0)
  nextReview  DateTime?
  lastReview  DateTime?

  timesCorrect   Int @default(0)
  timesIncorrect Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, questionId, topic])
  @@index([userId, topic])
  @@index([userId, nextReview])
}

enum FlashcardStatus {
  NOT_STARTED
  LEARNING
  REVIEWING
  MASTERED
}

// ========== QUIZ ATTEMPTS ==========
model QuizAttempt {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  topic           String     // "chapters", "founding_fathers", "awards_and_jewelry", "mixed"
  tags            String[]   // filter tags used
  totalQuestions  Int
  correctAnswers  Int
  score           Float      // percentage
  timeTaken       Int?       // seconds (null if untimed)
  isTimed         Boolean    @default(false)

  answers         QuizAnswer[]

  createdAt DateTime @default(now())

  @@index([userId, topic])
  @@index([userId, createdAt])
}

model QuizAnswer {
  id            String      @id @default(cuid())
  quizAttemptId String
  quizAttempt   QuizAttempt @relation(fields: [quizAttemptId], references: [id], onDelete: Cascade)

  questionId    String
  topic         String
  selectedAnswer String
  correctAnswer  String
  isCorrect     Boolean
  timeTaken     Int?  // seconds for this question

  @@index([quizAttemptId])
}

// ========== STREAKS & GAMIFICATION ==========
model DailyStreak {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  currentStreak   Int      @default(0)
  longestStreak   Int      @default(0)
  lastActivityDate DateTime?

  // Activity tracking for streaks
  totalDaysActive Int      @default(0)
  totalCards      Int      @default(0)
  totalQuizzes    Int      @default(0)

  updatedAt DateTime @updatedAt
}
